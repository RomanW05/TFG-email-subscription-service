{% extends "base.html.twig" %}
{% block body %}
<h1>Create new user</h1>
<hr>
{{ form_start(form) }}
    {{ form_row(form._token) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}
    {% if form.save is defined %}
        {{ form_row(form.save) }}
    {% else %}
        <button type="submit" class="btn btn-primary">Save</button>
    {% endif %}
{{ form_end(form) }}
{% endblock %}